{
  "name": "d2-visualizer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/d2-visualizer/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/d2-visualizer",
        "main": "packages/d2-visualizer/src/index.ts",
        "tsConfig": "packages/d2-visualizer/tsconfig.lib.json",
        "assets": ["packages/d2-visualizer/*.md"]
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs d2-visualizer {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/d2-visualizer/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/d2-visualizer"],
      "options": {
        "jestConfig": "packages/d2-visualizer/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
